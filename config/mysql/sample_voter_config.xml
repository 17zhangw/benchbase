<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <type>MYSQL</type>
    <driver>com.mysql.jdbc.Driver</driver>
    <url>jdbc:mysql://localhost:3306/oltpbench</url>
    <username>root</username>
    <password>password</password>
    <isolation>TRANSACTION_SERIALIZABLE</isolation>
    <batchsize>128</batchsize>

    <scalefactor>2</scalefactor>

    <!-- The workload -->
    <terminals>2</terminals>
    <works>
        <work>
            <time>300</time>
            <rate>10000</rate>
            <weights>100</weights>
        </work>
    </works>

    <!-- Voter Procedures declaration -->
    <transactiontypes>
        <transactiontype>
            <name>Vote</name>
        </transactiontype>
    </transactiontypes>
</parameters>
