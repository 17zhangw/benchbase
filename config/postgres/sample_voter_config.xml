<?xml version="1.0"?>
<parameters>

    <!-- Connection details -->
    <dbtype>POSTGRES</dbtype>
    <driver>org.postgresql.Driver</driver>
    <DBUrl>jdbc:postgresql://localhost:5432/oltpbench?sslmode=disable&amp;ApplicationName=voter&amp;reWriteBatchedInserts=true</DBUrl>
    <username>admin</username>
    <password>password</password>
    <isolation>TRANSACTION_SERIALIZABLE</isolation>
    <batchsize>128</batchsize>

    <scalefactor>10</scalefactor>

    <!-- The workload -->
    <terminals>10</terminals>
    <works>
        <work>
            <time>300</time>
            <rate>10000</rate>
            <weights>100</weights>
        </work>
    </works>

    <!-- Voter Procedures declaration -->
    <transactiontypes>
        <transactiontype>
            <name>Vote</name>
        </transactiontype>
    </transactiontypes>
</parameters>
